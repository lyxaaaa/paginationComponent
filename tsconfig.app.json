{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "src/**/*.d.ts", 
    "src/**/*.vue",
    "*.ts"
  ],
  // "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
  "experimentalDecorators": true,
  "experimentalDecorators": true,
  "resolveJsonModule": true,
  "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution":"node"
  }
}
